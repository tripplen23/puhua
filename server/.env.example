# Puhua Finnish Learning App - Environment Variables Template
# Copy this file to .env and fill in your actual values

# =============================================================================
# AZURE OPENAI API (Already configured)
# =============================================================================
NEXT_PUBLIC_AZURE_OPENAI_ENDPOINT=
NEXT_PUBLIC_AZURE_OPENAI_INSTANCE_NAME=
NEXT_PUBLIC_AZURE_OPENAI_KEY=
NEXT_PUBLIC_AZURE_OPENAI_DEPLOYMENT=
NEXT_PUBLIC_AZURE_OPENAI_API_VERSION=

# =============================================================================
# SUPABASE CONFIGURATION (Add your Supabase project details)
# =============================================================================

# Server-side Supabase (Node.js)
SUPABASE_URL="https://your-project-id.supabase.co"
SUPABASE_ANON_KEY="your_supabase_anon_key_here"
SUPABASE_SERVICE_ROLE_KEY="your_supabase_service_role_key_here"

# Client-side Supabase (Vite/React - must have VITE_ prefix)
VITE_SUPABASE_URL="https://your-project-id.supabase.co"
VITE_SUPABASE_ANON_KEY="your_supabase_anon_key_here"

# =============================================================================
# AZURE SPEECH API (Add your Azure Speech Service details)
# =============================================================================
AZURE_SPEECH_KEY="your_azure_speech_key_here"
AZURE_SPEECH_REGION="your_azure_speech_region_here"

# Client-side Azure Speech (if needed)
VITE_AZURE_SPEECH_KEY="your_azure_speech_key_here"
VITE_AZURE_SPEECH_REGION="your_azure_speech_region_here"

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================
NODE_ENV="development"
PORT="3001"

# =============================================================================
# HOW TO GET YOUR SUPABASE CREDENTIALS:
# =============================================================================
# 1. Go to https://supabase.com/dashboard
# 2. Select your project (or create a new one)
# 3. Go to Settings > API
# 4. Copy the Project URL and anon/public key
# 5. For service role key, copy the service_role key (keep this secret!)
#
# Project URL format: https://your-project-id.supabase.co
# Keys are long strings starting with "eyJ..."
# =============================================================================
